{
  "name": "provide-crud",
  "version": "1.0.0-rc.6",
  "description": "Provider factory for Creating, Reading, Updating, and Deleting resources.",
  "main": "./lib/index.js",
  "scripts": {
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack src/index.js dist/provide-crud.js --config webpack.config.development.js",
    "build:umd:min": "webpack src/index.js dist/provide-crud.min.js --config webpack.config.production.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "clean": "rimraf lib dist coverage",
    "prepublish": "npm run clean && npm run build",
    "test": "better-npm-run test",
    "test:watch": "npm test -- --watch",
    "test:cov": "babel-node ./node_modules/isparta/bin/isparta cover ./node_modules/mocha/bin/_mocha -- --recursive"
  },
  "betterScripts": {
    "test": {
      "command": "npm run prepublish && mocha --compilers js:babel-register --recursive --require babel-polyfill",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/loggur/provide-crud.git"
  },
  "keywords": [
    "react",
    "redux",
    "provide",
    "crud",
    "create",
    "read",
    "update",
    "delete",
    "resource"
  ],
  "author": "timbur",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/loggur/provide-crud/issues"
  },
  "homepage": "https://github.com/loggur/provide-crud",
  "devDependencies": {
    "babel-cli": "^6.6.0",
    "babel-core": "^6.7.0",
    "babel-loader": "^6.2.0",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.0",
    "better-npm-run": "^0.0.8",
    "expect": "^1.14.0",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.2",
    "jsdom": "^8.0.2",
    "lumburjack": "^1.0.0-0",
    "mocha": "^2.4.5",
    "react-redux-provide": "^6.0.0-0",
    "rimraf": "^2.5.1",
    "webpack": "^1.12.13"
  }
}
